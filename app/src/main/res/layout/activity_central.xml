<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azuloscuro"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:gravity="center"

        >
        <EditText
            android:id="@+id/horasLaborales"
            android:layout_marginBottom="20dp"
            style="@style/EditTexRounded"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Horas laborales diarias"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/tareasPendientesInput"
            android:layout_marginBottom="20dp"
            style="@style/EditTexRounded"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Número de tareas pendientes"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/Negro"
            android:text="Nivel de dificultad (1-5)"/>

        <SeekBar
            android:id="@+id/nivelDificultadInput"
            style="@style/EditTexRounded"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"

            android:max="4" />

        <EditText
            android:id="@+id/descansoInput"
            android:layout_marginBottom="20dp"
            style="@style/EditTexRounded"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/Negro"
            android:hint="Tiempo de descanso entre tareas (minutos)"
            android:inputType="number"/>

        <Button
            android:id="@+id/calcularButton"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Productividad"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/Negro"
            app:strokeColor="@color/azulosnegro"
            app:strokeWidth="3dp" />

        <TextView
            android:id="@+id/resultadoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/Negro"
            android:text="Resultados aquí..."/>

        <Button
            android:id="@+id/guardarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Resultado"
            android:textColor="@color/Negro"
            android:backgroundTint="@color/blanco"
            app:strokeColor="@color/azulosnegro"
            app:strokeWidth="3dp"
            android:layout_marginBottom="20dp"/>


        <ListView
            android:id="@+id/historialListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




</LinearLayout>
    </ScrollView>